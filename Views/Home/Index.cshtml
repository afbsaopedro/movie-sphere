@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1 class="display-4">MovieSphere</h1>
      <p class="lead">In MovieSphere you can rate and review movies for everyone in your university to see.</p>
      <p class="lead">Share with your colleagues and teachers the movies you are most passionate about!</p>
      <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">Sign up now</a>
    </div>
    <div class="col-md-6">
      <img src="https://www.themoviedb.org/t/p/w600_and_h900_bestv2/gsFun8nATm52aGHeT8ueAel98nE.jpg" class="img-fluid" alt="Movie poster" />
    </div>
  </div>
</div>

<div class="container text-center">
  <div class="row">
    <div class="col-md-12">
      <a asp-action="Popular" asp-controller="Movie" class="btn btn-primary">Check out some movies</a>
      <a asp-action="Feed" asp-controller="Home" class="btn btn-secondary">Check what everyone is saying</a>
    </div>
  </div>
</div>




